<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Remgeta - <%= category.Label %></title>
    <%- include('Scripts.ejs') %>
</head>
<body>
<!--////////////////////////////////////////////////////////////////-->

<%- include('RemgetaMenu.ejs') %>

<div class="container linija">
    <div class="row">
        <div class="col-md-12">

            <span class="page-title">PARDUOTUVĖ</span>
            <p class="menuTitle"><a class="menuTitleItem" href="/parduotuve">Parduotuvė</a> /
                <a> <%= category.Label %></a></p>
        </div>
    </div>
    <% if(subcategories.length == 0) { %>
        <div class="text-background">
            <ul class="tekstas">
                <li class="lastText">Nėra subkategorijų!</li>
            </ul>
        </div>
    <% } %>
    <div class="shop-box">
        <div class="row">
            <% for(var i = 0; i < subcategories.length; i++) { %>
                <div class="col-lg-3 col-6 text-center">
                    <a class="select" href="<%= category.Name %>/<%= subcategories[i].Name %>">
                        <div class="box category">
                            <img src="https://via.placeholder.com/300" alt="dummyimage" width="120" height="120">
                            <div class="box-title">
                                <h5><%= subcategories[i].Label %></h5>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <hr>

</div>
<!--////////////////////////////////////////////////////////////////-->
</body>
</html>